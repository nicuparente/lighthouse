// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model UserProfile {
  id                String    @id @default(cuid())
  firstName         String
  lastName          String
  email             String    @unique
  aboutMe           String
  currentJobTitle   String
  mentor            Boolean?  @default(false)
  joinedDate        DateTime  @default(now())
  profileImage      String
  seekingMentorship Boolean?  @default(false)
  affinity          String[]
  industry          Industry
  chatTopics        Topics[]
  linkedinLink      String
  twitterLink       String?
  calendarType      Calendar?
  calendarLink      String?
  publicProfile     Boolean   @default(false)
}

enum Calendar {
  Calendly
  Google
}

enum Industry {
  Agriculture
  Aviation
  Food
  Hospitality
  Technology
  RealEstate
  Sales
}

enum Topics {
  CareerTransition
  CareerBreak
  Entrepreneurship
  Marketing
  PersonalFinance
  PersonalBranding
  Podcasting
  ShareStories
  SOFTWARE_DEVELOPMENT
}
